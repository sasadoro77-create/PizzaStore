{
    "name": "your-vendor/pizza-store",
    "description": "Базовые классы для пиццерии",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PizzaStore\\": "src/"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "check-cs": "phpcs --standard=PSR12 src",
        "check-stan": "phpstan analyse src --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}